<form method="post" asp-action="SaveSignUp">
    First Name: <input type="text" name="FirstName" required/>
    Last Name: <input type="text" name="LastName" required/>
    Email: <input type="email" name="Email" required/>
    Birthday: <input type="date" name="Birthday" required/>
    <p>Would you like to sign up for email promos and deals?</p>
    <input type="radio" name="Promos" value="true" required />: Yes, Please!
    <input type="radio" name="Promos" value="false" required/>: No, Thank you

    <input type="submit" />
</form>
